{
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-undef": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@/hooks/useAuth",
            "message": "Importa useAuth desde '@/contexts/AuthProvider'."
          }
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
