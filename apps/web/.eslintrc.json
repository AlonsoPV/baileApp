{
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-undef": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@/hooks/useAuth",
            "message": "❌ Importa useAuth desde '@/contexts/AuthProvider'."
          },
          {
            "name": "../../hooks/useAuth",
            "message": "❌ Usa alias '@/contexts/AuthProvider'."
          },
          {
            "name": "../hooks/useAuth",
            "message": "❌ Usa alias '@/contexts/AuthProvider'."
          },
          {
            "name": "useAuth",
            "importNames": ["useAuth"],
            "message": "❌ Siempre importa: import { useAuth } from '@/contexts/AuthProvider'"
          }
        ],
        "patterns": [
          {
            "group": ["**/useAuth"],
            "message": "❌ Usa el import oficial desde '@/contexts/AuthProvider'"
          }
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
