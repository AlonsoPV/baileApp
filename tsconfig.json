{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM"
    ],
    // Include React type declarations as well. Keeping "types" restricted to only "node"
    // can make TS fail to resolve the 'react' module declarations in some setups.
    "types": ["node", "react"],
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "app.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "apps/**/*",
    "supabase/functions/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
